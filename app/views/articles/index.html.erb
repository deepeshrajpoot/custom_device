<div class="container"> 
  <h1 class="text-center"><em>Adimin Panel</em></h1>
  <div class="row">
    <div class="col-9">
      <%= link_to 'New User',new_article_path, class: "btn btn-primary fa fa-plus-square" %>
    </div> 
    <div class="col-3">
      <div class="row">
        <div class="col-2">
        </div> 
        <div class="col-10"> 
          <%= link_to "Log Out", destroy_user_session_path, class: "btn btn-danger fa fa-lock btn-left", method: :delete %>
        </div> 
     </div> 
   </div>
 </div>

 <table class="table table-strip">
   <tr>
     <th>Name</th>
     <th>Blog</th>
     <th colspan="3"></th>
   </tr>

   <% @articles.each do |article| %>
   <tr>
     <td><%= article.title %></td>
     <td><%= article.text.html_safe%></td>
     <td><%= link_to 'Show', article_path(article),class: "btn btn-info fa fa-eye" %></td>
     <td><%= link_to 'Edit', edit_article_path(article) ,class: "btn btn-primary fa fa-pencil" %></td>
     <td>
       <%= link_to 'Destroy', article_path(article),class: "btn btn-danger fa fa-thumbs-down",method: :delete,data: { confirm: 'Are you sure?' } %>
     </td>
   </tr>
   <% end %>
 </table>
</div>
